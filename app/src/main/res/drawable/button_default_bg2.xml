<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ffb624" />

            <stroke android:width="1dp" android:color="#ffb624" />

            <corners android:radius="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="#191919" android:startColor="#191919" />

            <stroke android:width="1dp" android:color="#191919" />

            <corners android:radius="1dp" />
        </shape>
    </item>

</selector>