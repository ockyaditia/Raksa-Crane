<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ffb624" />

            <stroke android:width="1dp" android:color="#ffb624" />

            <corners android:radius="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/colorPrimary" android:startColor="#5DBCD2" />

            <stroke android:width="1dp" android:color="@color/colorPrimary" />

            <corners android:radius="1dp" />
        </shape>
    </item>

</selector>