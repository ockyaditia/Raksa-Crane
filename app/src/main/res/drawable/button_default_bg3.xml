<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#4CB3E2" />

            <stroke android:width="1dp" android:color="#4CB3E2" />

            <corners android:radius="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="#FFBE2A" android:startColor="#FFBE2A" />

            <stroke android:width="1dp" android:color="#FFBE2A" />

            <corners android:radius="1dp" />
        </shape>
    </item>

</selector>